{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "Debug philo_bonus",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceFolder}/philo_bonus",
		"args": ["1", "800", "200", "200"],
		"stopAtEntry": false,
		"cwd": "${workspaceFolder}",
		"environment": [],
		"externalConsole": false,
		"MIMode": "gdb",
		"setupCommands": [
		  {
			"description": "Enable pretty-printing for gdb",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
		  }
		],
		"preLaunchTask": "build",
		"miDebuggerPath": "/usr/bin/gdb"
	  }
	]
  }